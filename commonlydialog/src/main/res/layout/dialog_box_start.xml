<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1944dp"
    android:layout_height="618dp">
    <LinearLayout
        android:id="@+id/start_dialog_view"
        android:layout_width="1944dp"
        android:layout_height="618dp"
        android:background="@drawable/popup_bg_1944_618"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="184dp"
            android:layout_width="match_parent"
            android:layout_height="344dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="344dp"
                android:layout_height="344dp"
                android:layout_marginStart="173dp"
                android:orientation="vertical"
                android:background="@drawable/soa_card">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/check_text_0"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/road" />

                <TextView
                    android:id="@+id/check_text_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="最优路线"
                    android:textColor="#FFFFFFFF"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/road_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/check_text_0"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="344dp"
                android:layout_height="344dp"
                android:layout_marginStart="74dp"
                android:orientation="vertical"
                android:background="@drawable/soa_card">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/check_text_1"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/playlist" />

                <TextView
                    android:id="@+id/check_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="精选歌单"
                    android:textColor="#FFFFFFFF"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/playlist_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/check_text_1"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="344dp"
                android:layout_height="344dp"
                android:layout_marginStart="74dp"
                android:orientation="vertical"
                android:background="@drawable/soa_card">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/check_text_2"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/xiangfen" />

                <TextView
                    android:id="@+id/check_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="心选香氛"
                    android:textColor="#FFFFFFFF"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/xiangfen_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/check_text_2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="344dp"
                android:layout_height="344dp"
                android:layout_marginStart="74dp"
                android:orientation="vertical"
                android:background="@drawable/soa_card">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/check_text_3"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/aircon" />

                <TextView
                    android:id="@+id/check_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="喜爱空调"
                    android:textColor="#FFFFFFFF"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/aircon_iv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@+id/check_text_3"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/then_dialog_view"
        android:layout_width="1944dp"
        android:layout_height="618dp"
        android:background="@drawable/popup_bg_1944_618"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/close_nor_n"/>
        <ImageView
            android:layout_width="1020dp"
            android:layout_height="550dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="39dp"
            android:scaleType="centerCrop"
            android:src="@drawable/soa_img"/>
        <TextView
            android:layout_width="695dp"
            android:layout_height="168dp"
            android:layout_marginTop="235dp"
            android:layout_marginStart="1137dp"
            android:gravity="center_vertical"
            android:text="SOA(面向服务的架构)+SDV(软件定义汽⻋) 实现智驾和座舱软硬分离，高效开发迭代。 最终实现消费级千人千面需求"
            android:textColor="#FFFFFFFF"
            android:textSize="36sp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:gravity="center">
        <TextView
            android:id="@+id/soa_title"
            android:layout_width="120dp"
            android:layout_height="73dp"
            android:layout_marginStart="808dp"
            android:layout_marginTop="71dp"
            android:text="SOA"
            android:gravity="center"
            android:textColor="@color/white"
            android:typeface="monospace"
            android:textSize="65sp" />
        <TextView
            android:layout_width="310dp"
            android:layout_height="73dp"
            android:layout_marginStart="930dp"
            android:layout_marginTop="74dp"
            android:text="服务原子化"
            android:textColor="@color/white"
            android:textSize="62sp" />
    </FrameLayout>
</FrameLayout>

